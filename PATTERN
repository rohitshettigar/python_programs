b=int(input("enter the no of blocks"))
l=int(input("enter the no of lines"))
s=int(input("enter the no of stars"))
sum=0
for i in range(b):
    print(f"------{i+1}---------")
    count=0
    for j in range(l-i):
        for j in range(s):
            print("*",end=" ")
            count=count+1
        print()
    print(count)
    sum+=count
print(f"Total:{sum}")
